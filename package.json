{
    "name": "typescript_course",
    "version": "1.0.0",
    "description": "Typescript course",
    "main": "dist/bundle.js",
    "scripts": {
        "lint": "eslint ./src/**/*.ts --fix",
        "prepare": "husky install",
        "tpl": "tsc",
        "start": "webpack serve",
        "sass": "sass --watch --style=compressed ./src/assets/scss:./src/assets/scss",
        "tsc:watch": "tsc --watch",
        "webpack:watch": "webpack --watch --mode development",
        "dev": "concurrently \"npm run sass\" \"npm run tsc:watch\" \"npm run webpack:watch\" \"npm run start\""
    },
    "author": "Josias Valentim de Figueredo",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.17.16",
        "@types/webpack": "^5.28.5",
        "@types/webpack-dev-server": "^4.7.1",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "concurrently": "^6.5.1",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "file-loader": "^6.2.0",
        "glob": "^11.0.1",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "sass": "^1.83.4",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.0"
    },
    "dependencies": {
        "@types/reflect-metadata": "^0.0.5",
        "mini-css-extract-plugin": "^2.9.2",
        "reflect-metadata": "^0.2.2"
    }
}
